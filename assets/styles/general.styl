html
  font-family 'Gilroy', sans-serif
  font-weight 200
  font-size "%spx" % (BaseRemSize)
  line-height 120%
  color Black
  background rgba(240,240,240,0.5)
  background radial-gradient(
    circle at 50% 50%,
    #E1DEC4 0%,
    rgb(0, 0, 0) 70%
  )

nav
  position absolute
  left 0
  top 0
  background white
  ul
    display flex
    flex-direction column
  li
    padding BS * 20
  a
    bs-font-size(30)

h1, h2, h3, h4, h5, h6
  margin 0
  padding 0
  line-height 120%
  font-weight 700

h1
  bs-font-size(62)

h2
  bs-font-size(44)

h3
  bs-font-size(36)

h4
  bs-font-size(26)

h5, h6
  bs-font-size(20)

p
  margin 0
  padding 0

ul, li
  margin 0
  padding 0
  list-style none

a
  display inline-block
  text-decoration none
  color inherit
  transition transform 0.3s ease-out
  &:hover
    transform scale(1.03)
  &:active
    transform scale(0.96)

img, canvas
  display block

.desktop_only
  display block

.mobile_only
  display none

.logo
  position absolute
  bottom BS * 25
  right BS * 25
  &__wrapper
    position relative
  &__canvas
    width BS * 212
  &__svg
    position absolute
    top 0
    left 0
    width 100%
    height 100%



@media BreakpointS
  .mobile_only
    display block

  .desktop_only
    display none
